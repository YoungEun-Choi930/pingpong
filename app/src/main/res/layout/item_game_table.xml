<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="5dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/game_table_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="게임이름"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:layout_margin="10dp" />

    <View
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="10dp"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/game_partici_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="이름1"
                android:textColor="@color/black"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/game_partici_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="이름2"
                android:textColor="@color/black"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/game_score_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">

                <TextView
                    android:gravity="center"
                    android:id="@+id/game_score_1"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="0"
                    android:textSize="14dp" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/game_score_3"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="0"
                    android:textSize="14dp" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/game_score_5"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="0"
                    android:textSize="14dp" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/game_score_7"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="0"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/game_score_9"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="0"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/game_score_result"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:textColor="#FF0000"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp">


                <TextView
                    android:gravity="center"
                    android:id="@+id/game_score_2"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="0"
                    android:textSize="14dp" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/game_score_4"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="0"
                    android:textSize="14dp" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/game_score_6"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="0"
                    android:textSize="14dp" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/game_score_8"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="0"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/game_score_10"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginEnd="5dp"
                    android:text="0"
                    android:textSize="14dp"
                    android:visibility="gone" />

                <TextView
                    android:gravity="center"
                    android:id="@+id/game_score_result2"
                    android:layout_width="20dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="0"
                    android:textColor="#FF0000"
                    android:textSize="14dp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/game_score_none"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:text="결과없음" />
        </LinearLayout>

    </RelativeLayout>

    <View
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_height="1dp"/>
    <View
        android:background="#E6E6E6"
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_height="1dp"/>


</LinearLayout>