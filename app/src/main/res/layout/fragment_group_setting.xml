<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDF4FA"
    android:orientation="vertical"
    tools:context=".Group.GroupSettingFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/btn_group_info"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="15dp"
            android:gravity="left|center"
            android:text="그룹 정보"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="#E6E6E6" />


        <Switch
            android:id="@+id/switch_groupNotice"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="15dp"
            android:minHeight="32dp"
            android:text="그룹 알림설정"
            android:checked="true"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="#E6E6E6" />

        <TextView
            android:id="@+id/btn_group_leave"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginHorizontal="15dp"
            android:gravity="center"
            android:text="그룹 탈퇴하기"
            android:textColor="#DF0F00"
            android:textSize="16dp" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/group_setting_manager"
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginVertical="10dp"
            android:gravity="left|center"
            android:text="그룹 관리"
            android:textColor="@color/black"
            android:textSize="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/btn_change_group_info"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="15dp"
                android:gravity="left|center"
                android:text="그룹 정보 수정하기"
                android:textColor="@color/black"
                android:textSize="16dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="#E6E6E6" />

            <TextView
                android:id="@+id/btn_change_buisness_info"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="15dp"
                android:gravity="left|center"
                android:text="사업자 정보 수정하기"
                android:textColor="@color/black"
                android:textSize="16dp" />


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="10dp"
                android:background="#E6E6E6" />

            <TextView
                android:id="@+id/btn_group_del"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginHorizontal="15dp"
                android:gravity="center"
                android:text="그룹 삭제하기"
                android:textColor="#DF0F00"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>