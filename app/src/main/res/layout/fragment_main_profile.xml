<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SearchSetting.MainProfileFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#EDF4FA">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:background="@color/white">


            <androidx.cardview.widget.CardView
                android:id="@+id/profile"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_margin="20dp"
                app:cardCornerRadius="75dp"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/profile_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_baseline_person_24" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/profile_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/profile"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/profile"
                android:text="이름"
                android:textColor="#333333"
                android:textSize="20dp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_name"
                android:layout_alignLeft="@id/profile_name"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:text="이메일@gmail.com"
                android:textColor="#404040"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/profile_degree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/profile_email"
                android:layout_alignLeft="@id/profile_email"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:text="부수"
                android:textColor="#404040"
                android:textSize="12dp" />

            <Button
                android:id="@+id/profile_btn_logout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/profile"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="로그아웃"
                android:textSize="12dp" />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white">

            <TextView
                android:id="@+id/btn_change_profile"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="내 정보 수정"
                android:textColor="#000000"
                android:textSize="16dp" />

            <View
                android:background="#E6E6E6"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/btn_my_writing"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"

                android:layout_weight="1"
                android:text="내가 쓴 글"
                android:textColor="#000000"
                android:textSize="16dp" />
            <View
                android:background="#E6E6E6"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/btn_my_application"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"

                android:layout_weight="1"
                android:text="가입신청 중인 그룹"
                android:textColor="#000000"
                android:textSize="16dp" />
            <View
                android:background="#E6E6E6"
                android:layout_width="match_parent"
                android:layout_marginHorizontal="10dp"
                android:layout_height="1dp"/>
            <TextView
                android:id="@+id/btn_my_history"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:gravity="center"

                android:layout_weight="1"
                android:text="게임 전적"
                android:textColor="#000000"
                android:textSize="16dp" />




        </LinearLayout>



    </LinearLayout>

</FrameLayout>