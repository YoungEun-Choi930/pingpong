<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/xml_border"
    android:layout_margin="10dp"
    android:id="@+id/linear_notice">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="10dp">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/grouphome_profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginRight="6dp"
                android:src="@drawable/ic_baseline_person_24">


            </de.hdodenhof.circleimageview.CircleImageView>
            <FrameLayout
                android:visibility="gone"
                android:layout_alignRight="@+id/grouphome_profile"
                android:layout_alignBottom="@+id/grouphome_profile"
                android:id="@+id/grouphome_manager"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:src="@color/white"/>

                <ImageView

                    android:layout_width="17dp"
                    android:layout_height="17dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_baseline_stars_24"
                    app:tint="#FFE500" />
            </FrameLayout>


            <TextView
                android:id="@+id/grouphome_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/grouphome_profile"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/grouphome_profile"
                android:text="이름"
                android:textColor="#333333"
                android:textSize="15dp"

                android:textStyle="bold" />

            <TextView
                android:id="@+id/grouphome_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_alignLeft="@id/grouphome_name"
                android:layout_alignBottom="@+id/grouphome_profile"
                android:layout_marginLeft="-1dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="0dp"
                android:text="시간"
                android:textColor="#404040"
                android:textSize="13dp" />
        </RelativeLayout>
    </FrameLayout>

    <TextView
        android:id="@+id/grouphome_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="16dp"
        android:text="내용"
        android:textColor="@color/black">
    </TextView>


</LinearLayout>

