<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/mypost_groupname"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginVertical="5dp"
            android:textColor="@color/black"
            android:textSize="14dp"></TextView>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EDF4FA" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:background="@color/white">


                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/mypost_profile"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="6dp"
                    android:src="@drawable/ic_baseline_person_24">


                </de.hdodenhof.circleimageview.CircleImageView>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/mypost_profile"
                    android:layout_marginLeft="3dp"
                    android:layout_toRightOf="@id/mypost_profile"
                    android:text=""
                    android:textColor="#333333"
                    android:textSize="15dp"

                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:layout_alignLeft="@id/name"
                    android:layout_alignBottom="@+id/mypost_profile"
                    android:layout_marginLeft="0dp"
                    android:layout_marginTop="5dp"
                    android:text=""
                    android:textColor="#404040"
                    android:textSize="13dp" />
            </RelativeLayout>


        </FrameLayout>

        <TextView
            android:id="@+id/mypost_contents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:layout_marginLeft="10dp"
            android:text=""
            android:textColor="@color/black"
            android:textSize="16dp"></TextView>


    </LinearLayout>

</LinearLayout>